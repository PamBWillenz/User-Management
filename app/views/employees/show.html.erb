        <tr>
          <th>Last Name:</th>
          <td><%= @employee.last_name %></td>
        </tr>
        <tr>
          <th>Email:</th>
          <td><%= @employee.email %></td>
        </tr>
        <tr>
          <th>Contact Number:</th>
